<% layout("/layouts/boilerplate") %>
<style>
  #filters{
    display: flex;
    align-items: center;
    overflow-y: hidden;
    overflow-x: scroll;
    margin-left: 0px !important;
  
    border-bottom: 1px solid rgb(0, 0, 0,0.3);
    position: sticky;
    top: 4rem;
    z-index: 2;
    background-color: white;
  }
  #filters::-webkit-scrollbar{
    display: none;
  }
  #filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    opacity: 0.7;
    transition: 0.1s; 
  }

  #filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .text-info{
    display: none;
  }
  .text-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 1rem;
    margin-left: 3rem;
    display: flex;
    align-items: center;
  }
  @media(max-width:1200px){
    .text-toggle{
      display: none;
    }
  }
  .tab-links{
    cursor: pointer;
    position: relative;
  }  


.tab-links::after{
    content: " ";
    width: 0;
    height: 3px;
    background-color: rgb(120, 112, 112);
    position: absolute;
    left: 0;
    bottom:0px;
    transition: 0.5s;
}
.tab-links:hover::after{
    opacity: 0.2;
    width: 100%;
   
}

  
</style>

<div id="filters" >
  <div id="filter" class="tab-links">
    <div><i class="fa-solid fa-fire"></i></div>
    <p >Trending</p>
  </div>
  <div id="filter" class="tab-links ">
    <div><i class="fa-solid fa-house"></i></div>
    <p  >Farm</p>
  </div>
  <div id="filter" class="tab-links ">
    <div><i class="fa-solid fa-water"></i></div>
    <p >Lake</p>
  </div>
  <div id="filter" class="tab-links">
    <div><i class="fa-solid fa-tent"></i></div>
    <p  >Camping</p>
  </div>
  <div id="filter" class="tab-links">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p >Beach</p>
  </div>
  <div id="filter" class="tab-links">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Iconic cities</p>
  </div>
  <div id="filter" class="tab-links" >
    <div><i class="fa-solid fa-mountain-sun"></i></div>
    <p>Mountains</p>
  </div>
  <div id="filter" class="tab-links" >
    <div><i class="fa-solid fa-igloo"></i></div>
    <p>Domes</p>
  </div>
  <div id="filter" class="tab-links" >
    <div><i class="fa-solid fa-ship"></i></div>
    <p>Boats</p>
  </div>
  <div id="filter" class="tab-links" >
    <div><i class="fa-solid fa-monument"></i></div>
    <p>Historical Home</p>
  </div>
  <div class="text-toggle">
    <div class="form-check form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <%for(listing of allListings){ %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card listing-card col">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing-img"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %></b> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %> / Night
          <i class ="text-info"> &nbsp; +18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>

<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  
  taxSwitch.addEventListener("click",()=>{
    let textInfo = document.getElementsByClassName("text-info");
    for(info of textInfo){
    if( info.style.display != "inline"){
      info.style.display = "inline"
    }else{
      info.style.display = "none"
    }
  }
  })
  
</script>
